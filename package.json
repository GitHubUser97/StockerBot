{
  "name": "stocker_bot",
  "version": "1.0.0",
  "description": "Twitter Bot to monitor and query financial news sources about publicy traded companies you are interested in",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run poll",
    "poll": "node dist/src/index.ts --poll --firebase",
    "poll:local": "tsc && node dist/src/index.js -o poll",
    "search": "node dist/src/index.ts --search",
    "search_poll": "node dist/src/index.ts --search_poll --firebase",
    "format": "prettier-standard '**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dwallach1/StockerBot.git"
  },
  "author": "David Wallach",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dwallach1/StockerBot/issues"
  },
  "homepage": "https://github.com/dwallach1/StockerBot#readme",
  "dependencies": {
    "@babel/polyfill": "^7.8.7",
    "async": "^2.6.3",
    "csv": "^3.1.0",
    "csv-parse": "^2.5.0",
    "events": "^3.1.0",
    "firebase-admin": "^5.13.1",
    "lodash": "^4.17.15",
    "pino": "^6.1.1",
    "twit": "^2.2.11",
    "unirest": "^0.5.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-typescript": "^7.9.0",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.3",
    "@types/lodash": "^4.14.149",
    "@types/method-override": "0.0.31",
    "@types/morgan": "^1.9.0",
    "@types/node": "^13.9.8",
    "@types/pino": "^5.17.0",
    "@types/twit": "^2.2.23",
    "babel-cli": "^6.26.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.0",
    "prettier-standard": "^16.2.1",
    "typescript": "^3.8.3"
  },
  "lint-staged": {
    "linters": {
      "**/*.ts": [
        "prettier-standard",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
